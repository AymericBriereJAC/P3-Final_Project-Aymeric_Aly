<Window x:Class="FinalProject_Alejandro_Aymeric.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject_Alejandro_Aymeric"
        mc:Ignorable="d"
        Title="Vending Machine" Height="850" Width="1450"
        ResizeMode="NoResize">
    <Grid Margin="0,0,10,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="512*"/>
            <ColumnDefinition Width="261*" />

        </Grid.ColumnDefinitions>
        <!--List box element that shows the products and their names prices to be added-->
        <Label Content="Products" FontWeight="Bold" HorizontalAlignment="Left" FontSize="30" Margin="117,42,0,42" Width="136" Grid.Column="1"/>
        <ListView Margin="10,92,0,92" Grid.Column="0" x:Name="lvItems" SelectionMode="Single" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <!-- Define the columns for the grid view -->
                    <GridViewColumn Header="Item" Width="100">
                        <!-- Define the data template for the column -->
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="5" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Quantity" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Quantity}" Margin="5" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Price" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Price}" Margin="5" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>



        <Label Content="Add to cart" Grid.Column="1" Margin="0,621,0,185" FontWeight="Bold" HorizontalAlignment="Center" FontSize="15"/>
        <Button Margin="363,660,363,98" x:Name="addCart" Click="AddCart_Click" Grid.Column="1" Background="DarkTurquoise" BorderBrush="Black" BorderThickness="2,2">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Image Source="/Images/ShoppingCart.png"/>
                    <!--make image stay on button-->
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>


        <Label Content="Cart" Grid.Column="2" FontWeight="Bold" FontSize="40" HorizontalAlignment="Left" Margin="72,31,0,-31" Width="90"/>
        <ListView x:Name="lvCartItems" Grid.Column="2" Margin="19,91,261,514" Background="Tan" BorderBrush="Black" BorderThickness="2">
            <ListView.View>
                <GridView>
                    <!-- Show the content of every segment -->
                    <GridViewColumn Header="Product" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Name}" Foreground="Black" FontWeight="Bold" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- Show the type of every segments -->
                    <GridViewColumn Header="Price" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Price}" Foreground="ForestGreen" FontWeight="Bold" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <!--Button to delete the selected product from the cart-->
        <Button Grid.Column="2" x:Name="btnDelete" Content="Remove From Cart" Margin="41,363,283,420" Click="btnDelete_Click"/>
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Height="194" Margin="18,445,109,0">
            <!--Panel where user can select their payment method-->
            <Label Content="Payment Method" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <Label Content="Select the bill you are going to pay with if you are paying cash:" Margin="5"/>
            <Button Content="Pay with cash" Click="payCash_Click" Width="341"/>
            <ComboBox x:Name="comboBox" SelectedIndex="0" Margin="5">
                <ComboBoxItem Content="$5"/>
                <ComboBoxItem Content="$10"/>
                <ComboBoxItem Content="$20"/>
                <ComboBoxItem Content="$50"/>
                <ComboBoxItem Content="$100"/>
            </ComboBox>
            <Button Content="Pay with credit card" Click="payDebit_Click" Margin="5"/>
            <Label Content="Note: You need to have at least 5$ worth of items in your cart" Margin="5"/>
        </StackPanel>




    </Grid>
</Window>

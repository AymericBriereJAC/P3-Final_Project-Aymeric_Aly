<Window x:Class="FinalProject_Alejandro_Aymeric.ReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject_Alejandro_Aymeric"
        mc:Ignorable="d"
        Title="ReceiptWindow" SizeToContent="WidthAndHeight">
    <StackPanel>
        <!-- Contain all the text related to the receipt is populated in the code -->
        <TextBlock x:Name="tbReceipt" Margin="12"/>
        <StackPanel  Background="#FFECECEC">
            <!-- Import or close the receipt -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Export" Margin="5" Padding="10,5" Click="btnExport_Click" Background="#FFE2E1E1"/>
                <Button Content="OK" Margin="5" Padding="10,5" Click="btnOk_Click" Background="#FFE2E1E1"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>

